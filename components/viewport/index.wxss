.viewport {
    position: relative;
    width: 100%;
    height: 100%;
    box-shadow: 0 0 2000px 2000px rgba(0, 0, 0, 0.6);
    display: flex;
    justify-content: center;
    align-items: center;
}

.viewport.LOCKED .center-icon {
    height: 20px;
    width: 20px;
    background-image: url('data:image/png;base64,');
    background-size: 100%;
    background-repeat: no-repeat;
}

.corner-lt,
.corner-lb,
.corner-rt,
.corner-rb {
    position: absolute;
    height: 4px;
    width: 6px;
    border: 2px solid #fff;
}

.corner-lt {
    left: 0;
    top: 0;
    border-bottom-color: transparent;
    border-right-color: transparent;
}

.corner-lb {
    left: 0;
    bottom: 0;
    border-top-color: transparent;
    border-right-color: transparent;

}

.corner-rt {
    right: 0;
    top: 0;
    border-bottom-color: transparent;
    border-left-color: transparent;
}

.corner-rb {
    right: 0;
    bottom: 0;
    border-top-color: transparent;
    border-left-color: transparent;
}