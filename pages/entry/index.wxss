.translate-entry {
    margin: 0 20px;
    background-color: #e3e3e3;
    border-radius: 4px;
    padding: 4px 8px;
    display: flex;
    color: #aaa;
}

.gap {
    display: inline-flex;
    padding: 0 4px;
}

.btn-camera {
    display: inline-flex;
    width: 32px;
    height: 20px;
    background-image: url('data:image/png;base64,');
    background-size: 60%;
    background-position: center;
    background-repeat: no-repeat;
}

.search-input {
    padding: 0 8px;
    flex-grow: 1;
    font-size: 14px;
    box-sizing: border-box;
    color: #333;
}

.search-input::placeholder {
    color: #aaa;
}
